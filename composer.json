{
  "name": "horat1us/yii2-model-schema",
  "description": "JSON Schema for Yii2 Model using validation rules",
  "type": "library",
  "require": {
    "php": ">=8.4",
    "yiisoft/yii2": "^2.0.31",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "squizlabs/php_codesniffer": "^3.5",
    "phpstan/phpstan": "^2.0",
    "horat1us/yii2-asset-free": "*"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Horat1us\\Yii\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Horat1us\\Yii\\Tests\\": "tests/"
    },
    "files": [
      "vendor/yiisoft/yii2/Yii.php"
    ]
  },
  "scripts": {
    "lint": "phpcs --standard=PSR12 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR12 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit --coverage-text",
    "analyse": "phpstan analyse"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  }
}
